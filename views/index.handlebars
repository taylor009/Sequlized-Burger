<h1>Burgers</h1>
<div class="col-xs-6">
<ul class="list-group">
  {{#each burger}}
    {{#unless this.devoured}}
      <li class="list-group-item clearfix">
        <span class="col-xs-10">
            <p class="list-item-p">{{this.burger_name}}</p>
        </span>
        <span class="col-xs-2">
            <form action="/{{this.id}}?_method=PUT" method="POST" class="form-inline">
            <input type="hidden" name="burger_name" value="{{this.burger_name}}">
            <button type="submit" class="btn btn-default pull-right">Eat it!</button>
            </form>
        </span>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

